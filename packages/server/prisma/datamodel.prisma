type User {
  id: ID! @unique
  facebookId: String @unique
  googleId: String @unique
  userName: String
  avatar: String
  MyQuestions: [Question!]!
  MyAnswers: [Answer!]!
  MyInternships: [Internship!]!
  createdAt: DateTime!
  updatedAt: DateTime!
  repScore: Int! @default(value: "0")
}
type Question {
  id: ID! @unique
  header: String!
  body: String
  askedBy: User!
  answers: [Answer!]!
  createdAt: DateTime!
  updatedAt: DateTime!
}
type Answer {
  id: ID! @unique
  body: String!
  answeredBy: User!
  answeredTo: Question!
  createdAt: DateTime!
  updatedAt: DateTime!
}
type Internship {
  id: ID! @unique
  title: String!
  location: String!
  description: String
  postedBy: User!
  avatar: String
  tags: [Tag!]!
  createdAt: DateTime!
  updatedAt: DateTime!
}
type Tag {
  id: ID! @unique
  name: String! @unique
}
